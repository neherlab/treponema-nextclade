{
  "$schema": "https://raw.githubusercontent.com/nextstrain/nextclade/refs/heads/release/packages/nextclade-schemas/input-pathogen-json.schema.json",
  "schemaVersion": "3.0.0",
  "alignmentParams": {
    "kmerDistance": 500,
    "allowedMismatches": 5,
    "kmerLength": 20,
    "excessBandwidth": 15
  },
  "files": {
    "reference": "reference.fasta",
    "pathogenJson": "pathogen.json",
    "genomeAnnotation": "annotation.gff",
    "examples": "examples.fasta"
  },
  "attributes": {
    "name": "Treponema pallidum",
    "reference name": "Nichols",
    "reference accession": "NC_021490"
  },
  "qc": {
    "snpClusters": {
      "enabled": true,
      "windowSize": 1000,
      "clusterCutOff": 10,
      "scoreWeight": 10
    },
    "mixedSites": {
      "enabled": true,
      "mixedSitesThreshold": 50,
      "scoreWeight": 50
    },
    "frameShifts": {
      "enabled": true,
      "scoreWeight": 10
    },
    "stopCodons": {
      "enabled": true,
      "scoreWeight": 10
    }
  }
}
